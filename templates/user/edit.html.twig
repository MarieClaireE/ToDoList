{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}
        {{ form_widget(form) }}
        <select method="POST" id="roles-select" name="roles-select">
            <option value={{ user.roles[0] }} disabled selected>
                {% if user.roles[0] == 'ROLE_ADMIN' %}
                    Administrateur
                {% else %}
                    Utilisateur
                {% endif %}
                
            </option>
            <option value='ROLE_ADMIN'>Administrateur</option>
            <option value='ROLE_USER'>Utilisateur</option>
        </select>

        <button type="submit" class="btn btn-success pull-right">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
