{% extends 'base.html.twig' %}

{% block header_title %}<h1>Créer un utilisateur</h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('user_create')}) }}
            {{ form_widget(form) }}
            <select method="POST" id="roles-select" name="roles-select">
                <option value='ROLE_ADMIN'>Rôle administrateur</option>
                <option value='ROLE_USER'>Rôle utilisateur</option>
            </select>
            <button type="submit" name="submit" class="btn btn-success pull-right">Ajouter</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
